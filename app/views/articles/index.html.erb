<p style="color: green"><%= notice %></p>
<h1 class="text-center mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Articles</h1>
<div id="articles">
  <% @articles.each do |article| %>
    <%= render article, trunc: true %>
    <p>
      <%= link_to "Read more...", article, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
    </p>
    <hr class="my-12 h-px border-t-0 bg-transparent bg-gradient-to-r from-transparent via-neutral-500 to-transparent opacity-25 dark:opacity-100" />
  <% end %>
</div>
