<p style="color: green"><%= notice %></p>
<h1 class="mb-4 text-4xl font-extrabold leading-none tracking-tight text-center text-gray-900 md:text-5xl lg:text-6xl">Articles</h1>
<div id="articles">
  <% @articles.each do |article| %>
    <%= render article, trunc: true %>
    <p>
      <%= link_to "Read more...", article, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
    </p>
    <hr class="h-px my-12 bg-transparent border-t-0 opacity-25 bg-gradient-to-r from-transparent via-neutral-500 to-transparent dark:opacity-100" />
  <% end %>
  <%= paginate @articles, left: 1, right: 3 %>
</div>
