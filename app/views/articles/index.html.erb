<h1 class="inline-flex items-center justify-center w-full mb-8 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-4xl lg:text-5xl">Latest articles <span class="ml-2 text-2xl font-light text-slate-600">(<%= @articles_count %>)</span></h1>
<div id="articles">
  <% @articles.each do |article| %>
    <%= render article, trunc: true %>
    <p>
      <%= link_to "Read more...", article, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
    </p>
    <hr class="h-px my-12 bg-transparent border-t-0 opacity-25 bg-gradient-to-r from-transparent via-neutral-500 to-transparent dark:opacity-100" />
  <% end %>
  <%= render 'layouts/pagination', entities: @articles %>
</div>
