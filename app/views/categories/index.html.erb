<div class="flex flex-col h-full">
  <div class="flex flex-col grow">
    <h1 class="mb-8 text-4xl font-extrabold leading-none tracking-tight text-center text-gray-900 md:text-4xl lg:text-5xl">Latest categories</h1>
    <ul class="w-full mb-8 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg">
      <% @categories.each do |category| %>
        <%= link_to category_path(category), class: "" do %>
          <li class="flex items-center justify-between w-full h-10 px-4 border border-gray-200 hover:bg-slate-100">
            <div><%= category.name %></div>
            <div class="flex items-center">
              <%= pluralize(category.articles.count, 'article')%>
              <% if logged_in? &&  current_user.admin? %>
                <%= render 'buttons', category: category%>
              <% end %>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <%= render 'layouts/pagination', entities: @categories %>
</div>
